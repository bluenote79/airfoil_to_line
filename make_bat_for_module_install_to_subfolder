"""
This skript reads the paths from Fusion 360 and creates bat-Files on windows desktop to install numpy and pyfoil to a subfolder "lib" of the script folder. The folder will be
appendet to path by airfoil_to_line so you won't have to reinstall after changes made do to fusion 360 updates.
"""

import adsk.core, adsk.fusion, adsk.cam, traceback

import sys
import os


app = adsk.core.Application.get()
ui = None
ui  = app.userInterface

#PATHS_DICT = json.loads(app.executeTextCommands(u'paths.get'))

import sys
import subprocess


def run(context):

    # get path of skript
    script_path = os.path.dirname(os.path.abspath(__file__))
    
    try:   
        directory = "lib"
        parent_dir = script_path
        path_l = os.path.join(parent_dir, directory)
        #ui.messageBox(path_l)
    except:

        #ui.messageBox("lib directory already exists")
        pass
    
    try:
        
        py_exe = sys.executable

        
        py_ex = os.path.abspath(str(sys.executable))

        #ui.messageBox(str(py_ex))

        numpy_install = f'{py_ex} -m pip install --target "{path_l}" --upgrade numpy'

        pyfoil_install = f'{py_ex} -m pip install --target "{path_l}" --upgrade pyfoil'

        text1 = "start cmd /K " + numpy_install
        text2 = "start cmd /K " + pyfoil_install

 
        desktop = os.path.normpath(os.path.expanduser("~/Desktop"))

        
        filename1 = os.path.join(desktop, "numpy.bat")

        file1 = open(filename1, 'w')
        file1.close()
        filea1 = open(filename1, "a")
        filea1.write(text1)


        filename2 = os.path.join(desktop, "pyfoil.bat")

        file2 = open(filename2, 'w')
        file2.close()
        filea2 = open(filename2, "a")
        filea2.write(text2)

        
    except:
        if ui:
            ui.messageBox('Failed:\n{}'.format(traceback.format_exc()))
